<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fgEvento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="348dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:text="Crear Evento"
                    android:textSize="30dp"
                    android:fontFamily="@font/koulen"
                    android:layout_marginTop="30dp"
                    />

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="211dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/evento"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border"
                    android:hint="Titulo de evento"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:fontFamily="@font/dosis"
                    tools:ignore="TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_width="371dp"
                    android:layout_height="51dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="176dp"
                        android:layout_height="50dp"
                        android:background="@drawable/border"
                        android:fontFamily="@font/dosis"
                        android:hint="hh:mm"
                        tools:ignore="TouchTargetSizeCheck" />

                    <DatePicker
                        android:id="@+id/etPlannedDate"
                        android:hint="ocultadito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:focusable="false"
                        android:clickable="true"
                        android:maxLines="1" />


                </LinearLayout>

                <EditText
                    android:id="@+id/txtDescripcion"
                    android:layout_width="370dp"
                    android:layout_height="132dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/dosis"
                    android:hint="Ingresar Descripcion"
                    android:textAlignment="textStart"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="376dp"
                    android:layout_height="121dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtRegla"
                        android:layout_width="174dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="@font/dosis"
                        android:hint="Reglas"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/txtRecomendaciones"
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/border"
                        android:hint="Recomendaciones"
                        android:textSize="13dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtUbicacion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border"
                    android:hint="Ubicacion"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:fontFamily="@font/dosis"/>

                <EditText
                    android:id="@+id/txtDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/dosis"
                    android:hint="Direccion"
                    android:textAlignment="center"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/txtReferencia"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border"
                    android:hint="Referencia"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:fontFamily="@font/dosis"/>

                <EditText
                    android:id="@+id/txtEtiqueta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border"
                    android:hint="Etiquetas"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:fontFamily="@font/dosis"/>

                <ImageButton
                    android:id="@+id/btnCrear"
                    android:layout_width="45dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="300dp"
                    android:src="@drawable/atras" />
                <TextView
                    android:id="@+id/txtCrear"
                    android:layout_width="43dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="30dp"
                    android:text="Crear"
                    android:layout_marginLeft="300dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/koulen"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>